<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/AppBottomSheetDialogTheme"
    android:background="#243441"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bo_goc"
        android:layout_width="120dp"
        android:layout_height="3dp"/>
    <TextView
        android:text="Update Book"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/edtUpdate_matheloai"
            android:hint="Mã thể loại"
            android:textColorHint="#80000000"
            android:background="@drawable/bo_goc_text_sheet_bottom"
            android:textColor="#232425"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/edtUpdate_tentheloai"
            android:hint="Tên thể loại"
            android:textColorHint="#80000000"
            android:background="@drawable/bo_goc_text_sheet_bottom"
            android:textColor="#232425"
            android:padding="12dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/edtUpdate_motatheloai"
            android:hint="Mô tả"
            android:textColorHint="#80000000"
            android:background="@drawable/bo_goc_text_sheet_bottom"
            android:textColor="#232425"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnUpdate_theloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:text="CẬP NHẬT"
        android:layout_marginBottom="30dp"
        android:background="@color/colorBlack"
        android:textColor="#FFF"
        android:textStyle="bold" />

</LinearLayout>